{
    "name": "one-bundle-app/one-bundle-app",
    "description": "Make your bundle an application",
    "keywords": ["bundle", "app", "symfony"],
    "homepage": "https://github.com/one-bundle-app/one-bundle-app",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Marc Morera",
            "email": "yuhu@mmoreram.com"
        },
        {
            "name": "Symfony Community",
            "homepage": "https://github.com/one-bundle-app/one-bundle-app/contributors"
        }
    ],
    "autoload": {
        "psr-4": {
            "OneBundleApp\\": ""
        }
    },
    "require": {
        "php": ">=7.1",
        "mmoreram/base-bundle": "^1.0.7",
        "symfony/framework-bundle" : "^3.0|^4.0",
        "symfony/console": "^3.0|^4.0",
        "symfony/http-kernel": "^3.0|^4.0",
        "symfony/debug": "^3.0|^4.0",
        "symfony/yaml": "^3.0|^4.0",
        "symfony/dotenv": "^3.0|^4.0",
        "mmoreram/symfony-bundle-dependencies": "^2.0",
        "react/http": "^0.8",
        "cboden/ratchet": "^0.4",
        "clue/redis-react": "^2.2"
    },
    "require-dev": {
        "mmoreram/php-formatter": "1.3.1",
        "friendsofphp/php-cs-fixer": "^1.12.4"
    },
    "scripts": {
        "fix-code": [
            "vendor/bin/php-cs-fixer fix --config-file=.php_cs || true",
            "vendor/bin/php-formatter f:u:s App || true",
            "vendor/bin/php-formatter f:h:f App || true",
            "vendor/bin/php-formatter f:s:f App || true"
        ]
    }
}
